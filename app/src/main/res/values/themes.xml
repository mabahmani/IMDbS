<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IMDbScraping" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/sky_900</item>
        <item name="colorAccent">@color/blue_gray_500</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_050</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_050</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

</resources>